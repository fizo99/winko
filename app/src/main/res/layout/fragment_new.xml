<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewFragment" android:background="@color/background">
    <RatingBar
            android:stepSize="0.5"
            android:progressTint="#000000"
            android:progressBackgroundTint="#30000000"
            android:secondaryProgressTint="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/form_ratingBar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.357" app:layout_constraintHorizontal_bias="0.502"
    />
    <Button
            android:text="@string/send_placeholder"
            android:textColor="@color/background"
            android:background="@android:color/black"
            android:fontFamily="monospace" android:textSize="24sp" android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="61dp" android:id="@+id/form_send_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.646"
    />
    <ImageButton
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/camera"
            android:layout_width="90dp"
            android:layout_height="58dp" android:id="@+id/form_photo_btn"
            android:tint="#000000" android:background="@color/background" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_nameField"
            app:layout_constraintBottom_toTopOf="@+id/form_send_btn" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.509"/>
    <EditText
            android:backgroundTint="#000000"
            android:layout_width="239dp"
            android:layout_height="40dp"
            android:inputType="textVisiblePassword"
            android:hint="@string/name_placeholder"
            android:ems="10"
            android:textCursorDrawable="@null"
            android:id="@+id/form_nameField"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.442" android:layout_marginTop="8dp"
            android:fontFamily="monospace"
    />
</androidx.constraintlayout.widget.ConstraintLayout>