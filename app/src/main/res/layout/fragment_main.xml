<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainFragment" android:background="@color/background">

    <ImageView
            android:layout_width="166dp"
            android:layout_height="337dp" tools:src="@drawable/logo" android:id="@+id/img_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.04"
            app:layout_constraintHorizontal_bias="0.49"/>
    <Button
            android:id="@+id/btn_history"
            android:layout_width="142dp"
            android:layout_height="73dp"
            android:text="@string/btn_history_text"
            app:layout_constraintTop_toBottomOf="@id/textview_first"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.468"
            android:background="@android:color/black" android:textColor="@color/background"
            android:fontFamily="monospace"
            android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000000" android:textStyle="bold" android:textSize="48sp"
            android:fontFamily="monospace"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.433"/>
    <Button
            android:id="@+id/btn_new"
            android:layout_width="142dp"
            android:layout_height="73dp"
            android:text="@string/btn_new_text"
            app:layout_constraintTop_toBottomOf="@id/textview_first"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/background"
            android:background="@android:color/black"
            android:fontFamily="monospace" android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintVertical_bias="0.197"/>
</androidx.constraintlayout.widget.ConstraintLayout>